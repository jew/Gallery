<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<style type="text/css">
div.img
  {
  margin:2px;
  border:1px solid #0000ff;
  height:auto;
  width:auto;
  float:left;
  text-align:center;
  }
div.img img
  {
  display:inline;
  margin:3px;
  border:1px solid #ffffff;
  }
div.img a:hover img
  {
  border:1px solid #0000ff;
  }
div.desc
  {
  text-align:center;
  font-weight:normal;
  width:120px;
  margin:2px;
  }
  
 p.margin
{
margin-top:100px;
margin-right:50px;

}
</style>
</head>
<body>
[% INCLUDE menu.tt %] 
<h2 id = "gl-head-second" >Explore / Galleries</h2>
[% CALL albums_rs.reset %]
<div class="container_12 flick">
	<div class="grid_8 ";>
		[% WHILE ( album = albums_rs.next ) -%]
		    [% IF album.pictures %]
		       <div class="img" style="float: left; margin-right: 20px;" >
		           <a href="/album/[%album.album_id%]/viewall"> <img src="/gallery/[% album.pictures.first.thumbnail %]"> </img> </a>  
		           <div ><h4>[% album.album_name %]</h4></div>
		       </div>
		    [% END %]
		[% END -%]		
	</div>
	<div class="grid_2">
		[% INCLUDE login.tt %] 
	</div>
</div>	
</body>
</html>